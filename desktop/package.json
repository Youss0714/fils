{
  "name": "ygestion-desktop",
  "version": "1.0.0",
  "description": "YGestion Desktop Application - Gestion Commerciale et Comptable",
  "main": "./dist/main.js",
  "type": "module",
  "author": "YGestion Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.9.2",
    "electron-builder": "^25.1.8",
    "electron": "^37.3.1"
  },
  "scripts": {
    "build": "tsc -p tsconfig.electron.json",
    "start": "npm run build && electron ./dist/main.js",
    "dev": "npm run build && electron ./dist/main.js --dev",
    "dist": "npm run build && electron-builder",
    "dist:windows": "npm run build && electron-builder --windows --x64",
    "dist:portable": "npm run build && electron-builder --windows portable",
    "dist:dir": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.ygestion.desktop",
    "productName": "YGestion",
    "copyright": "Copyright Â© 2024 YGestion Team",
    "directories": {
      "output": "../dist/setup"
    },
    "files": [
      "dist/**/*",
      "../dist/index.html",
      "../dist/assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    }
  }
}
